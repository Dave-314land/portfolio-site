---
import { FileTextIcon } from 'astro-feather';
import { Contact } from './Contact'
---
<section class="px-4 mx-auto py-48 md:py-80 bg-white">
    <div class="max-w-7xl">
        <div class="container mx-auto text-left md:w-11/12 xl:w-9/12 md:text-center">
            <h1 class="mb-8 text-4xl font-extrabold leading-none tracking-normal text-gray-800 md:text-6xl md:tracking-tight">
                Hi, I'm Dave.
                <br />
                I'm a Full Stack Developer.
            </h1>
            <p class="px-0 mb-8 text-xl text-gray-600 md:text-xl lg:px-24">
                I build web applications with modern technologies to solve today's problems.
            </p>
            <div class="mb-4 space-x-0 md:space-x-2 md:mb-8">
                <Contact client:load/>
                <a href="https://dave-piland-resume.tiiny.site" target="_blank">
                    <button class="inline-flex items-center gap-2 justify-center w-full px-6 py-3 mb-2 text-lg bg-gray-100 hover:bg-gray-300 rounded-2xl sm:w-auto sm:mb-0">
                        Read My Resume
                        <FileTextIcon />
                    </button>
                </a>
            </div>
        </div>
    </div>
</section>