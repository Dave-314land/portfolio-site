---
import { Image } from 'astro:assets';
import projects from './data/projects.json'
import tffbImg from '../assets/tffb-ipsum.png'
---

<section id="projects" class="py-16 px-4 bg-gray-500">
    <di class="container mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Projects</h2>
        <div class="grid mx-8 md:mx-4 lg:mx-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-8">

            <!-- Project 1 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <a href={projects[0].siteUrl} target="_blank" rel="noopener noreferrer">
                    <Image 
                        src={tffbImg}
                        alt=projects.title
                        width={400} 
                        height={300} 
                        class="w-full h-48 object-cover"
                    />
                </a>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2">{projects[0].title}</h3>
                    <p class="text-gray-600 mb-4">{projects[0].description}</p>
                    <div class="flex flex-wrap gap-2 mb-4">
                        <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded text-sm">{projects[0].technologies[0]}</span>
                    </div>
                    <div class="flex justify-between">
                        <a 
                            href={projects[0].siteUrl} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="text-sky-500 hover:underline hover:text-sky-700"
                        >
                            Live Site
                        </a>
                        <a 
                            href={projects[0].githubUrl} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="text-sky-500 hover:underline hover:text-sky-700"
                        >
                            GitHub Repo
                        </a>
                    </div>
                </div>
            </div>

