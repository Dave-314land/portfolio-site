---
import { Github, Linkedin, FileText } from 'lucide-astro';
import PoweredByPiland from './PoweredByPiland.astro'
---

<header id="top">
  <nav class="fixed w-full bg-white/80 backdrop-blur-sm border-b z-50">
    <div class="container mx-auto px-4 lg:px-10 h-16 flex items-center justify-between">
      <PoweredByPiland></PoweredByPiland>
      <div class="hidden lg:flex items-center gap-6">
        <li class="list-none">
          <a href="#about" class="hover:text-sky-500">About</a>
        </li>
        <li class="list-none">
          <a href="#work" class="hover:text-sky-500">Projects</a>
        </li>
      </div>
      <div class="hidden lg:flex items-center gap-6 ml-6">
        <a href="https://github.com/Dave-314land" target="_blank" rel="noopener noreferrer">
          <Github class="w-5 h-5 hover:text-sky-500 hover:scale-125 transition-colors" />
        </a>
        <a href="https://www.linkedin.com/in/davepiland/" target="_blank" rel="noopener noreferrer">
          <Linkedin class="w-5 h-5 hover:text-sky-500 hover:scale-125 transition-colors" />
        </a>
        <a href="https://dave-piland-resume.tiiny.site" target="_blank" rel="noopener noreferrer">
          <FileText class="w-5 h-5 hover:text-sky-500 hover:scale-125 transition-colors" />
        </a>
      </div>

      <!-- mobile drop down button show on small and medium screens-->
      <div class="lg:hidden">
        <div>
          <button type="button"
          class="inline-flex w-full justify-center rounded-md bg-white px-2 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
          id="dropdown-menu"
          aria-expanded="true"
          aria-haspopup="true">
          <span class="sr-only">Close menu</span>
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
          </button>
        </div>

        <!-- Dropdown menu, show/hide based on menu state -->
        <div class="absolute right-0 z-10 mt-4 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
          <div class="py-1" role="none">
            <a href="#" class="block px-4 py-2 text-md font-semibold text-gray-700 hover:bg-gray-50" role="menuitem" tabindex="-1" id="menu-item-0">About</a>
            <a href="#" class="block px-4 py-2 text-md font-semibold text-gray-700 hover:bg-gray-50" role="menuitem" tabindex="-1" id="menu-item-1">Work</a>
          </div>
          <hr>
          <div class="py-2 flex">
            <a
              href="https://github.com/Dave-314land"
              target="_blank" rel="noopener noreferrer"
              class="block px-4 py-2 text-md font-semibold text-gray-700 hover:bg-gray-50"
            >
              <Github/>
            </a>
            <a
              href="https://github.com/Dave-314land"
              target="_blank" rel="noopener noreferrer"
              class="block px-4 py-2 text-md font-semibold text-gray-700 hover:bg-gray-50"
            >
              <Linkedin />
            </a>
            <a
              href="https://github.com/Dave-314land"
              target="_blank" rel="noopener noreferrer"
              class="block px-4 py-2 text-md font-semibold text-gray-700 hover:bg-gray-50"
              >
                <FileText />
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>


<script>
  // Get references to the button and dropdown menu
  const menuButton = document.getElementById('menu-button');
  const dropdownMenu = document.getElementById('dropdown-menu');

  // Toggle dropdown visibility
  menuButton?.addEventListener('click', () => {
    console.log('clicked')
    dropdownMenu?.classList.toggle('hidden');
  });
</script>